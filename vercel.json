{
    "version": 2,
    "builds": [
        {
            "src": "app/app.ts",
            "use": "@vercel/node"
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "app/app.ts"
        },
        {
            "src": "/",
            "dest": "app/public/index.html"
        },
        {
            "src": "/(.*)",
            "dest": "app/public/$1"
        }
    ]
}